<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="prodSlctListCPSCHACON"
        title="{i18n>PrdId}"
        rememberSelections="false"
        search="handleSearch1"
        liveChange="handleSearch1"
        confirm="handleSelection"
        cancel="handleClose"
        multiSelect="false"
        contentWidth="320px"
        items="{path: '/results',sorter: {path: 'PRODUCT_ID',descending: false}}"
        selectionChange="handleProdChange"
        growing="true"
    >
        <StandardListItem
            title="{PRODUCT_ID}"
            description="{PROD_DESC}"
            type="Active"
        />
    </SelectDialog>
</core:FragmentDefinition>
