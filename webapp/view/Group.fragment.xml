<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog contentWidth="30%" id = "oDlg" title="Create Group Name">
        <VBox class="container">
          <HBox>
                <Label text="Product :" class="configLabel" />
                <Input id="oProduct" width="140px" required="true" editable="false" />
            </HBox>
            <HBox>
                <Label text="Group Name :" class="configLabel" />
                <Input id="oGroupName" width="140px" required="true" />
            </HBox>
            <HBox>
                <Label text="Weightage :" class="configLabel" />
                <Input id="oWeightage" width="140px" required="true" type="Number" />
            </HBox>
            <OverflowToolbar style="Clear">
                <ToolbarSpacer ></ToolbarSpacer>

                <Button text="Create" id="gCreate" type="Default" press="onGroupCreate" />
                <Button text="Update" id="gEdit" visible="false" type ="Default" press="onEdit" />
                <ToolbarSeparator visible="false"></ToolbarSeparator>
                <Button text="Cancel" type="Default" press="onGCancel" />

            </OverflowToolbar>
            <!-- <HBox justifyContent="Center">
           
            </HBox> -->
        </VBox>
    </Dialog>
</core:FragmentDefinition>
